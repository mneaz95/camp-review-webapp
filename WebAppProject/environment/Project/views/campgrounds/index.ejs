<% include ../partials/header%>
    
<!--This is proving now you see when 
    you log-in there is a user with information
        <h4><%= currentUser %></h4>-->
<div id="carousel" class="carousel slide" data-ride="carousel" data-interval="5000">
  <div class="carousel-inner">
    <div class="carousel-item active">
       <img class="d-block w-100" src="https://images.pexels.com/photos/1376960/pexels-photo-1376960.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="First slide">
       <div class="centered3">Welcome to</div>  
        <div class="centered">CampReview!</div>  
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.pexels.com/photos/1266009/pexels-photo-1266009.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="Second slide">
      <div class="centered2">CAMP. EXPLORE. DREAM. DISCOVER.</div>  
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.pexels.com/photos/1230302/pexels-photo-1230302.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="Third slide">
      <div class="centeredDark">Good Things Come To Those Who Camp!</div>  
    </div>
  </div>
</div>
<!--this div gives us some space away from the wall-->
<div class="container"  style="max-width: 1500px;">
<header class="jumbotron homeJumbtron" style="margin: 20px auto;">
    <!--this div is because when we made the page smaller the text inside jumbotron would touch the wall-->
    <div class="container">
        <% if(currentUser){ %>
        <h1>Hello <%= currentUser.username %>!</h1>
        <p>View hand-picked campground reviews from all over the world</p>
        <p>
            <a class="btn btn-primary btn-large" href="campgrounds/new"> Add new Campground</a>
        </p>
        
        <% }else{ %>
        
        <h1>Sign in to add a Campground Review!</h1>
        
        <p>View hand-picked campground reviews from all over the world</p>
        <p>
            <a class="btn btn-primary btn-large" href="campgrounds/new"> Add new Campground</a>
        </p>
        <% } %> 
    </div>
</header>


    

    <!--text center making the text centered-->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;" >
        <!--campground is the name we are giving for every forEACH-->
     
            <% for(var i = campgrounds.length;i>0;i--){ %>
                <div class="col-md-3 col-sm-6">
                    <!--this makes a little grid, thumnail is a bootstrap class-->
                    <div class="img-thumbnail mx-auto" style = "margin: 20px auto;">
                        <!--class img-fluid and "alt" were added so the image is scaled to the parent class-->
                        <img src="<%= campgrounds[i-1].image %>" class="img-fluid" alt="Responsive image">
                        <div class="caption">
                            <h4><%= campgrounds[i-1].description %></h4>
                        </div>
                        <p>
                            <!--/campgrounds/SOME ID and we added it with EJS-->
                                <!--campground is the name we are giving for every forEACH-->
                                    <!--THIS WILL TAKE US TO THE SHOW TEMPLATE-->
                            <a href="/campgrounds/<%= campgrounds[i-1].postID %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
            </div>
       
        <% }; %>
    </div>
</div>

<% include ../partials/footer%>


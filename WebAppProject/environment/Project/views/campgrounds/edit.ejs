<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; margin: 20px auto;">Edit <%= campground.name %></h1>
    </div>
    
     <div class="row">
        <div style="width: 30%; margin: 50px auto;">
            <!--ACTION is the route for the post-->
                <!--action we need /campgrounds/121212/edit-->
                    <!--?_method=PUT added because of restFULL routes check page-->
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
        
                 <!--We use the name instead of our route to grab the data from request.body-->
                <div class="form-group">
                    <!--change placeholder to value v10-->
                    <!--name="" was changed to campground[...] to group them together-->
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <!--this div class form-group gives us some space-->
                <div class="form-group">
                     <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
                
                <!--v10 edited-->
                <!--value="  campground.name "-->
                <!--value=" campground.image "-->
                <!--value=" campground.description "-->
                
                <!--What we just did here is:-->
                <!--    Looking up a campground in the route based off the id-->
                <!--        Then we render the EDIT template, were taking the data we found -->
                <!--            from findByID() and passing that to campground then displaying the information-->
                
                
                
            </form>
            <a href="/campgrounds">Go back</a>
        </div> 
    </div>
    
</div>


<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; margin: 20px auto;">Add New Comment <%= campground.name %></h1>
    </div>
    
     <div class="row">
        <div style="width: 30%; margin: 50px auto;">
            
                                        <!--getting the id-->
            <form action="/campgrounds/<%= campground.postID %>/comments/new" method="POST">
        
            <!--Text and Image are now nested in comment-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment" placeholder="text">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go back</a>
        </div> 
    </div>
    
</div>


<% include ../partials/footer %>